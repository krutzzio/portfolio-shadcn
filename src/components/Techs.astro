            <Icon name="Git" class="text-principal text-[6rem]" />
            <h2 class="mt-4 text-[1.35rem]">Git</h2>
        </article>
        <article class="flex flex-col w-fit m-auto items-center">
            <Icon name="Github" class="text-principal text-[6rem]" />
            <h2 class="mt-4 text-[1.35rem]">Github</h2>
        </article>
    </main>
</section>
