<header
    class="flex flex-col justify-center lg:h-[100dvh] lg:mt-0 mt-32 text-[7.5vw] leading-[1em]"
>
    <h1 class="">Hi! My name is</h1>
    <h1 class="text-principal text-[1.5em] leading-[1em] font-medium">
        Gerard Costa
    </h1>
    <h1 class="text-[0.8em]">
        I'm a <span class="font-medium">Front end developer</span>
    </h1>
    <h1 class="text-[0.95em]">
        and <span id="cambio-texto" class="font-medium text-principal"> </span>
    </h1>
</header>

<style>
    #cambio-texto {
        display: inline-block;
        transition: opacity 0.2s ease-in-out;
    }
</style>

<script>
    const textos = [
        "a team player. 🏀",
        "I love ducks. 🦆",
        "optimist.",
        "a food lover. 🍝",
        "videogamer. 🎮",
    ];
    let indice = 0;

    function cambiarTexto() {
        const elemento = document.getElementById("cambio-texto");
        if (!elemento) return;
        elemento.style.opacity = "0"; // Oculta el texto

        setTimeout(() => {
            elemento.textContent = textos[indice];
            elemento.style.opacity = "1"; // Muestra el nuevo texto
            indice = (indice + 1) % textos.length;
        }, 200); // Tiempo suficiente para que la opacidad llegue a 0
    }

    // Cambia el texto cada 3 segundos
    setInterval(cambiarTexto, 3000);

    // Inicia el ciclo inmediatamente
    cambiarTexto();
</script>
