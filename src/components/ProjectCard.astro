---

const { project } = Astro.props;
const { name, desc } = project;
---

<article class="flex justify-between my-16 mx-4 relative">
    <!-- <Icon name="blobs/project1" class="absolute top-[-35rem] left-[-2rem] z-0" size={1550} /> -->

    <aside class="w-[35%] h-full flex flex-col justify-between z-10">
        <h1 class="text-6xl font-medium text-main mb-6">Project name</h1>
        <p class="text-3xl">{desc}</p>
    </aside>
    <img
        class="w-[40%] h-full z-10"
        src="/images/gamba/Landing.png"
        alt="Gamba Landing"
    />
</article>
